    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>Sphero_RVR_Plus_CS.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude legacy duplicate files at repo root in favor of Core/, Sensors/, Demo/ versions -->
    <Compile Remove="ColorSensorManager.cs" />
    <Compile Remove="RvrController.cs" />
    <Compile Remove="RvrBleConnection.cs" />
    <Compile Remove="SimpleColorSensorDemo.cs" />
    
    <!-- Temporarily exclude files with compilation errors until migration -->
    <Compile Remove="ColorSensorExamples.cs" />
    <Compile Remove="Demo\ColorSensorLedDemo.cs" />
    <Compile Remove="Examples\ColorSensorLedSyncTest.cs" />
    <Compile Remove="Examples\LedExamples.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Ignore archived legacy project files so they don't get compiled twice -->
    <Compile Remove="Sphero_RVR+_11Novembre_Final\**\*.cs" />
    <EmbeddedResource Remove="Sphero_RVR+_11Novembre_Final\**\*" />
    <None Remove="Sphero_RVR+_11Novembre_Final\**\*" />
    <Content Remove="Sphero_RVR+_11Novembre_Final\**\*" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Documentation\" />
  </ItemGroup>

</Project>
